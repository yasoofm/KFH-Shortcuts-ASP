@model FrontKFHShortcuts.Models.Request.RequestResponse

@{
    ViewBag.Title = "Delete Request";
}

<div class="container" style="margin-top: 50px;">
    <div class="row">
        <div class="col-12">
            <h2 class="text-center">Delete Request</h2>
            <h3>Are you sure you want to delete this request?</h3>
            <div>
                <h4>@Model.EmployeeName</h4>
                <hr />
                @using (Html.BeginForm("Delete", "Request", FormMethod.Post))
                {
                    @Html.HiddenFor(model => model.Id)
                    <button type="submit" class="btn btn-danger">Delete</button>
                    <a href="@Url.Action("Index", "Request")" class="btn btn-secondary">Cancel</a>
                }
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #f8f9fa;
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
    }
</style>
