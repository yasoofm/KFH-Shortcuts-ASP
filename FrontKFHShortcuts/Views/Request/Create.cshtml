@model FrontKFHShortcuts.Models.Request.RequestResponse

@{
    ViewBag.Title = "Add Request";
}

<div class="container" style="margin-top: 50px;">
    <div class="row">
        <div class="col-12">
            <h2 class="text-center">Add Request</h2>
            @using (Html.BeginForm("Create", "Request", FormMethod.Post))
            {
                <div class="form-group">
                    <label for="EmployeeId">Employee Id</label>
                    @Html.TextBoxFor(model => model.EmployeeId, new { @class = "form-control", placeholder = "Enter Employee Id" })
                </div>
                <div class="form-group">
                    <label for="EmployeeName">Employee Name</label>
                    @Html.TextBoxFor(model => model.EmployeeName, new { @class = "form-control", placeholder = "Enter Employee Name" })
                </div>
                <div class="form-group">
                    <label for="ClientName">Client Name</label>
                    @Html.TextBoxFor(model => model.ClientName, new { @class = "form-control", placeholder = "Enter Client Name" })
                </div>
                <div class="form-group">
                    <label for="ClientNumber">Client Number</label>
                    @Html.TextBoxFor(model => model.ClientNumber, new { @class = "form-control", placeholder = "Enter Client Number" })
                </div>
                <div class="form-group">
                    <label for="ProductId">Product Id</label>
                    @Html.TextBoxFor(model => model.ProductId, new { @class = "form-control", placeholder = "Enter Product Id" })
                </div>
                <div class="form-group">
                    <label for="ProductTitle">Product Title</label>
                    @Html.TextBoxFor(model => model.ProductTitle, new { @class = "form-control", placeholder = "Enter Product Title" })
                </div>
                <div class="form-group">
                    <label for="NumberOfPoints">Number Of Points</label>
                    @Html.TextBoxFor(model => model.NumberOfPoints, new { @class = "form-control", placeholder = "Enter Number Of Points" })
                </div>
                <button type="submit" class="btn btn-primary">Add Request</button>
                <button type="reset" class="btn btn-secondary">Reset</button>
            }
        </div>
    </div>
</div>

<style>
    body {
        background-color: #f8f9fa;
    }

    .btn-primary {
        background-color: #17a2b8;
        border-color: #17a2b8;
    }

    .btn-secondary {
        background-color: #ffc107;
        border-color: #ffc107;
    }
</style>
