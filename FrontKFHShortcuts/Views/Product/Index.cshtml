@model IEnumerable<FrontKFHShortcuts.Models.Product.ProductResponse>

@functions {
    public string Truncate(string input, int maxLength)
    {
        if (string.IsNullOrEmpty(input)) return input;
        return input.Length <= maxLength ? input : input.Substring(0, maxLength) + "...";
    }
}

<style>
    .btn-intense-red {
        background-color: #ff0000;
        border-color: #cc0000;
        color: white;
    }

        .btn-intense-red:hover {
            background-color: #cc0000;
            border-color: #990000;
        }
</style>

<div class="row mb-3">
    <div class="col-md-12">
        <a href="@Url.Action("Create", "Product")" class="btn btn-primary" style="background-color: #008930">+ Add Product</a>

    </div>
</div>

@if (Model != null && Model.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Product</th>
                <th>Image</th>
                <th>Shariah</th>
                <th>Target Audience</th>
                <th>Description</th>
                <th>Category</th>
                <th>Awarded Points</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@Html.ActionLink(item.Name, "Details", item)</td>
                    <td><img src="@item.Image" alt="@item.Image" style="width:100px;height:auto;" /></td>
                    <td>@Truncate(item.Shariah, 15)</td>
                    <td>@Truncate(item.TargetAudience, 15)</td>
                    <td>@Truncate(item.Description, 15)</td>
                    <td>@item.CategoryName</td>
                    <td>@item.AwardedPoints</td>
                    <td>
                        <a href="@Url.Action("EditProduct", "Product", item)" class="btn btn-success" style="background-color: #008930">✎</a>
                        <a href="@Url.Action("Delete", "Product", item)" class="btn btn-danger" style="background-color: #dc3545">✖</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No products available.</p>
}
