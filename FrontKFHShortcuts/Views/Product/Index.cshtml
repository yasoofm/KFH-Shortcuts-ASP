@model IEnumerable<ProductResponse>

<div class="row mb-3">
    <div class="col-md-12">
        <a href="@Url.Action("Create", "Product")" class="btn btn-primary">Add Product</a>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Product</th>
            <th>Image</th>
            <th>Shariah</th>
            <th>Target Audience</th>
            <th>Description</th>
            <th>Category</th>
            <th>Awarded Points</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@Html.ActionLink(item.Name, "Details", new { id = item.Id })</td>
                <td><img src="@item.Image" alt="@item.Image" style="width:50px;height:50px;" /></td>
                <td>@item.Shariah</td>
                <td>@item.TargetAudience</td>
                <td>@item.Description</td>
                <td>@item.CategoryName</td>
                <td>@item.AwardedPoints</td>
                <td>
                    @Html.ActionLink("Edit", "EditProduct", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "DeleteConfirmed", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>