@model ProductResponse

<div class="container mt-5">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <img src="@Model.Image" class="card-img-top" alt="@Model.Name">
                <div class="card-body">
                    <h5 class="card-title">@Model.Name</h5>
                    <p class="card-text"><strong>Product Details:</strong> @Model.Description</p>
                    <p class="card-text"><strong>Shariah:</strong> @Model.Shariah</p>
                    <p class="card-text"><strong>Target Audience:</strong> @Model.TargetAudience</p>
                    <p class="card-text"><strong>Category:</strong> @Model.CategoryName</p>
                    <p class="card-text"><strong>Awarded Points:</strong> @Model.AwardedPoints</p>
                </div>
            </div>
        </div>
    </div>
</div>