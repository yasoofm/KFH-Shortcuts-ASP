@{
    Layout = "_Layout";
}

@model FrontKFHShortcuts.Models.LogIn.LogInRequest
@{
    ViewBag.Title = "Login";
}

<div class="container" style="height: 100vh; display: flex; justify-content: center; align-items: start;">
    <div class="card" style="width: 20rem; padding: 2rem; margin-top: 60px;">
        <div class="text-center">
            <img src="~/images/kfh_white.png" alt="Kuwait Finance House Logo" class="logo" style="width: 50px; height:fit-content; padding-bottom: 14px; border-radius: 5px">
        </div>
        <h2 class="text-center">Sign In</h2>
        <form asp-action="Login" method="post">
            <div class="form-group">
                <input type="email" class="form-control" id="Email" name="Email" required placeholder="KFH Email" />
            </div>
            <div class="form-group">
                <input type="password" class="form-control" id="Password" name="Password" required placeholder="Password"/>
            </div>
            <div><button type="submit" class="btn btn-primary btn-block" style="background-color: #008930">Sign In</button></div>
            <div class="text-center mt-2">
                <a href="#">Forgot Password?</a>
            </div>
        </form>
    </div>
</div>

<style>
    body {
        background-color: #f8f9fa;
    }

    .card {
        border: none;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }
</style>
