@model FrontKFHShortcuts.Models.Reward.RewardResponse

<div class="container mt-5">
    <div class="row">
        <div class="col-md-12">
            <h2>Delete Reward</h2>
            <h3>Are you sure you want to delete this reward?</h3>
            <div>
                <h4>@Model.Title</h4>
                <dl class="row">
                    <dt class="col-sm-2">Required Points</dt>
                    <dd class="col-sm-10">@Model.RequieredPoints</dd>

                    <dt class="col-sm-2">Usage</dt>
                    <dd class="col-sm-10">@Model.Usage</dd>

                    <dt class="col-sm-2">Due Date</dt>
                    <dd class="col-sm-10">@Model.DueDate.ToString("MM/dd/yyyy")</dd>
                </dl>
            </div>
            @using (Html.BeginForm("DeleteConfirmed", "Reward", new { id = Model.Id }, FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a href="@Url.Action("Index", "Reward")" class="btn btn-default">Cancel</a>
            }
        </div>
    </div>
</div>