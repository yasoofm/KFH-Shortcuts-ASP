@model IEnumerable<FrontKFHShortcuts.Models.Catalog.CategoryResponse>

<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between">
                    <div class="header-title">
                        <h4 class="card-title">Category List</h4>
                    </div>
                    <div class="header-action">
                        <a href="/Category/Create" class="btn btn-primary" style="background-color: #008930">Add Category</a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Name</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>@item.Name</td>
                                        <td>
                                            <div class="list-user-action">
                                                @Html.ActionLink(routeValues: item, controllerName: "Category", actionName: "Edit", linkText: "Edit", htmlAttributes: new { @class = "btn btn-sm btn-warning" })

                                                <a href="/Category/Delete/@item.Id" class="btn btn-sm bg-primary" data-toggle="tooltip" data-placement="top" title="Delete"><i class="ri-delete-bin-line mr-0"></i></a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="row justify-content-between mt-3">
                        <div class="col-md-6">
                            <span>Showing @Model.Count() entries</span>
                        </div>
                        <div class="col-md-6">
                            <!-- Pagination can be added here if needed -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
