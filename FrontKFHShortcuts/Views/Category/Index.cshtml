@model IEnumerable<FrontKFHShortcuts.Models.Catalog.CategoryResponse>

<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between">
                    <div class="header-title">
                        <h4 class="card-title">Category List</h4>
                    </div>
                    <div class="header-action">
                        <a href="/Category/Create" class="btn btn-primary" style="background-color: #008930">Add Category</a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Name</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>@item.Name</td>
                                        <td>
                                            <a href="@Url.Action("Edit", "Category", item)" class="btn btn-success" style="background-color: #008930">✎</a>
                                            <a href="@Url.Action("Delete", "Category", item)" class="btn btn-danger" style="background-color: #dc3545">✖</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="row justify-content-between mt-3">
                        <div class="col-md-6">
                            <span>Showing @Model.Count() entries</span>
                        </div>
                        <div class="col-md-6">
                            <!-- Pagination can be added here if needed -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
